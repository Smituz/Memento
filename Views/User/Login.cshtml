@model MeriDiaryv2.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            display: flex;
            height: 100vh;
        }

        .container {
            display: flex;
            width: 100%;
        }

        .left {
            width: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fff;
        }

        .right {
            width: 50%;
            background: url('../images/login_1.jpeg') no-repeat center center;
            background-size: cover;
        }

        .form-container {
            width: 80%;
            max-width: 400px;
        }

        h1 {
            font-size: 32px;
            font-weight: 700;
            color: #1A1A1A;
            margin-bottom: 10px;
        }

        p {
            font-size: 14px;
            color: #6B6B6B;
            margin-bottom: 30px;
        }

        label {
            font-size: 14px;
            font-weight: 600;
            color: #1A1A1A;
            display: block;
            margin-bottom: 5px;
        }

        input[type="email"], input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #E0E0E0;
            border-radius: 5px;
            font-size: 14px;
        }

        .login-btn {
            width: 100%;
            padding: 10px;
            background-color: #4A3AFF;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left">
            <div class="form-container">
                <h1>Welcome back!</h1>
                <p>Enter to register your memories right away.</p>
                <form asp-controller="User" asp-action="Login" method="post">
                    <label asp-for="Email">Email *</label>
                    <input id="email" asp-for="Email" placeholder="Enter your mail address" type="email" required />

                    <label asp-for="Password">Password *</label>
                    <input id="password" asp-for="Password" placeholder="Enter password" type="password" required />

                    <button class="login-btn" type="submit">Log In</button>
                </form>
            </div>
        </div>
        <div class="right">
            <!-- You can add content or images here -->
        </div>
    </div>
</body>
</html>
